         IfStr(''%$(|BM_debug|);'',''well, yes'',''='',!:>
            Assign(''BM %!1 %!2%$(|BM_j|); {%$(|BM_key|);}'',''%!1 %!2%$(|BM_j|);%\%$(|BM_entry|);'');>
         :,!:>
            Assign(''BM %!1 %!2%$(|BM_j|); {%$(|BM_key|);}'',''%$(|BM_entry|);'');>
         :);>
         Assign(''BM_sortEntries'',''%$(|BM_sortEntries|);BM %!1 %!2%$(|BM_j|); {%$(|BM_key|);}%\'');>
         LetRegNum(6,%!6+%!7);'>
      );",>
     "Stop;");>
