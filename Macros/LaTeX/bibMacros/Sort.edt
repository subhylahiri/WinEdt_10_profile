                        Assign(""BM_sortCrossrefs"",""%$(''''BM_sortCrossrefs'''');{%!3}%\"");||);|>
             );>
          '',!''>
             LetRegNum(4,|%$(*BM_sortError*);+1|);>
             Assign(|BM_sortError|,|%!4|);>
         '');>
         Call(''sort_key'');>
